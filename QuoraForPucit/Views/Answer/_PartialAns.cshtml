 @model QuoraForPucit.Models.Answer
@{
    var answer = (Answer)ViewData["answer"];
}
       <div class="answer">
           <div class="ans-body">
           @answer.AnswerDescription
           </div>
          <div class="answer-info mt-3">
            <div class="ans-btns ml-4">
              <a href="#" class="like-btn"><i class="fa fa-thumbs-up"></i></a>
              <a href="#" class="ml-4 dislike-btn"><i class="fa fa-thumbs-down"></i></a>
              <a href="#" class="ml-4 comment-btn"><i class="fa fa-comments"></i></a>
            </div>
            <div class="ans-ask-data mr-4">
              <h6 class="answer-time">@answer.Time</h6>
              <div class="profile">
                <img src="../images/login.png" style="width: 40px; height:40px ;" alt="">
                <a href="#">@answer.Answerer</a>
              </div>
            </div>
          </div>
        </div>