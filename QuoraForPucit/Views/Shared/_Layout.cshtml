@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserwithIdentity> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/bootstrap-5.1.3-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/fontawesome/css/all.css" rel="stylesheet" />
    <title> @ViewData["Title"]</title>
    <link rel="icon" href="~/images/icon.png">
    @RenderSection("links", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <button class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav d-flex justify-content-center" style="width: 100%;">
                <li class="nav-item mr-5 mt-auto">
                    <a class="navbar-brand" href="#">
                        <img src="~/images/Quora-for-Marketing.png"
                             height="30px"
                             alt="" />
                    </a>
                </li>
                <li class="nav-item mr-5 mt-auto">
                    <a class="nav-link" asp-controller="Question" asp-action="MainPage">
                        <i class="fa fa-home" style="color: #b92b27; font-size: 30px"></i><span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item mr-5 mt-auto">
                    <a class="nav-link" asp-controller="Profile" asp-action="Profile">
                        <i class="fa fa-user" style="color: #b92b27; font-size: 30px"></i><span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item mr-5 mt-auto">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" style="background-color:white;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-info" style="color: #b92b27; font-size: 30px ;"></i>
                        </button>
                        <div class="dropdown-menu" id="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-route="aboutuss">Quick Overview</a>
                            <a class="dropdown-item" asp-route="contactuss">Contact Us</a>
                        </div>
                    </div>
                </li>
                <li class="nav-item mr-5 mt-auto">
                    <form class="form-inline my-2 my-lg-0">
                        <select required name="Category" class="form-control mr-2" style="background:purple;color:white" id="category">
                        <option disabled selected>Choose Category</option>
                        <option value="All">All</option>
                        <option value="Exam">Exam</option>
                        <option value="Admission">Admission</option>
                        <option value="Job">Job</option>
                        <option value="Study">Study</option>
                        <option value="Information">Information</option>
                        <option value="Events">Events</option>  
                        </select>
                        <input id="search" name="searchvalue" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-success my-sm-0 search-btn" type="button">Search</button>
                    </form>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item mr-3 mt-auto">
                        <button type="button" class="btn btn-danger my-sm-0"style="background-color:#b92b27;">
                            <a  asp-controller="Question" asp-action="AskQuestion" style="text-decoration:none;color:white">Ask Question</a>
                        </button>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mr-5 mt-auto">
                        <button type="button" class="btn btn-danger my-sm-0"style="background-color:#3857CB;">
                            <a  asp-controller="Profile" asp-action="GetAllUsers" style="text-decoration:none;color:white">Manage Users</a>
                        </button>
                    </li>
                }
                @if (SignInManager.IsSignedIn(User))    
                {
                    <li class="nav-item mr-5 mt-auto">
                        <button type="button" class="btn btn-danger my-sm-0"style="background-color:darkred;">
                            <a  asp-controller="Login" asp-action="Logout" style="text-decoration:none;color:white">Logout</a>
                        </button>
                    </li>
                }
                else
                {
                     <li class="nav-item mr-5 mt-auto">
                        <button type="button" class="btn btn-danger my-sm-0"style="background-color:darkred;">
                            <a  asp-controller="Login" asp-action="SignIn" style="text-decoration:none;color:white">Login</a>
                        </button>
                    </li>
                }
            </ul>
        </div>
    </nav>
    @RenderBody()
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <footer style="background-color: rgb(0, 0, 0);  text-align: center; height:17vh; width:100%;margin-bottom:0;">
        <div class="container1 d-flex justify-content-center py-5">
            <div>
                <div style="width:5vw; height:1vh;background-color:rgb(255,255,255)"></div>
                <div style="width:5vw; height:1vh;background-color:rgb(255,255,255)" class="mt-4"></div>
            </div>
            <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: rgb(255,255,255);">
                <i class="fab fa-facebook-f" style="color:rgb(84,18,18);"></i>
            </button>
            <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: rgb(255,255,255);">
                <i class="fab fa-youtube" style="color:rgb(84,18,18);"></i>
            </button>
            <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: rgb(255,255,255);">
                <i class="fab fa-instagram" style="color:rgb(84,18,18);"></i>
            </button>
            <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: rgb(255,255,255);">
                <i class="fab fa-twitter" style="color:rgb(84,18,18);"></i>
            </button>
            <div>
                <div style="width:5vw; height:1vh;background-color:rgb(255,255,255)"></div>
                <div style="width:5vw; height:1vh;background-color:rgb(255,255,255)" class="mt-4"></div>
            </div>
        </div>
    </footer>
</body>
</html>